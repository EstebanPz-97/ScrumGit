@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
   
    <div class="container-fluid">
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="~/img/tecnologia-dura-fa.jpg" class="d-block w-100 img-carousel" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>First slide label</h5>
        <p>Some representative placeholder content for the first slide.</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="~/img/EGPNUUFPVNBETLXUJJMNXOC35Q.webp" class="d-block w-100 img-carousel" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Second slide label</h5>
        <p>Some representative placeholder content for the second slide.</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="~/img/tecnologia-.jpg" class="d-block w-100 img-carousel" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Third slide label</h5>
        <p>Some representative placeholder content for the third slide.</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>   
  </button>
</div>
    <div class="content">
        <div class="row">
            <div class="col-sm">Nuestros productos</div>
            <div class="col-sm">Redes sociales</div>
            <div class="col-sm">Compra con nosotros</div>
        </div>

    </div>
        <div class="container-fluid">
            <div class="row row-cols-4">
                @if(Model.productos.Count()>0)
                {
                    @foreach(var item in Model.productos)
                    {
                        <div class="col-3">
                            <div class="card mb-4">
                            <p class="contenedor">
                                <img src="@("img/"+item.ImagenProducto)" alt="@item.ImagenProducto" class="card-img-top img-index">
                                <h5 class="card-title">@Html.DisplayFor(m=>item.Nombre)</h5>
                            </p>
                            <div class="card-body">
                                <p class="card-text">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">@Html.DisplayFor(m=>item.Descripcion)</li>
                                        <li class="list-group-item">@Html.DisplayFor(m=>item.Marca)</li>
                                        <li class="list-group-item">@Html.DisplayFor(m=>item.Precio)</li>
                                        <li class="list-group-item">@Html.DisplayFor(m=>item.Serial)</li>

                                    </ul>
                                </p>
                            </div>
                            
                            </div>
                         </div>
                    }
                }
        </div>
    </div>
   
</div>
